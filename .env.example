# Database Configuration (Supabase PostgreSQL)
DATABASE_URL="postgresql://username:password@your-supabase-host:5432/postgres?schema=public&sslmode=require"

# MQTT Configuration
MQTT_HOST="your-mqtt-broker-host.com"
MQTT_PORT=8883
MQTT_USERNAME="your-mqtt-username"
MQTT_PASSWORD="your-mqtt-password"

# Server Configuration
PORT=3000
NODE_ENV=development

# MQTT Topics Configuration (Optional)
MQTT_TOPIC_SENSOR_DATA="sht20/data"
MQTT_TOPIC_SENSOR_STATUS="sht20/status"
MQTT_CLIENT_ID_PREFIX="sensor_monitor"

# Vercel Configuration (for production)
VERCEL_URL="your-app.vercel.app"

# Application Settings
APP_NAME="Sensor Monitoring"
APP_VERSION="2.0.0"

# MQTT Serverless Settings
MQTT_RETAIN_ENABLED=true
MQTT_AUTO_RECOVERY=true
MQTT_PROCESSING_INTERVAL=30000
MQTT_MESSAGE_LOG_RETENTION_DAYS=90

# Database Connection Pool Settings
DATABASE_CONNECTION_LIMIT=10
DATABASE_TIMEOUT=20000
